<div class="singin-tab">
    <h2>Profilo Utente</h2>
    <br>
</div>

<form method="POST" action="/modificaprofilo" name="datiutente">
    <div class="form-group">
            <label class="col-form-label" for="formGroupNome" required>Nome</label>
            <input type="text" class="form-control" id="nome" name="nome" value="<%- dati_utente.nome %>">
    </div>
    <div class="form-group">
            <label class="col-form-label" for="formGroupCognome" required>Cognome</label>
            <input type="text" class="form-control" id="cognome" name="cognome" value="<%- dati_utente.cognome %>">
    </div>
    <div class="form-group">
            <label class="col-form-label" for="formGroupEmail" required>Email</label>
            <input type="email" class="form-control" id="email" name="email" value="<%- dati_utente.email %>">
    </div>
    <div class="form-group">
            <label class="col-form-label" for="formGroupIndirizzo" required>Indirizzo</label>
            <input type="text" class="form-control" id="indirizzo" name="indirizzo" value="<%- dati_utente.indirizzo %>">
    </div>
    <div class="form-group">
            <label for="inputState">Stato</label>
            <select id="stato" class="form-control" name="stato">
                <option value="italia" <% if(dati_utente.stato == 'italia') %> <%- 'selected="selected"' %> >italia</option>
                    <option>Spagna</option>
                    <option>Francia</option>
                    <option>Germania</option>
                    <option>Olanda</option>
            </select>
    </div>
    <div class="form-group">
            <label class="col-form-label" for="formGroupProvincia" required>Provincia</label>
            <input type="text" class="form-control" id="provincia" name="provincia" value="<%- dati_utente.provincia %>">
    </div>
    <div class="form-group">
            <label class="col-form-label" for="formGroupTelefono" required>Telefono</label>
            <input type="tel" class="form-control" id="telefono" name="telefono" value="<%- dati_utente.telefono %>">
    </div>
    <div class="form-group">
            <label class="col-form-label" for="formGroupPassword" required>Password</label>
            <input type="password" class="form-control" id="password" name="password" value="<%- dati_utente.password %>">
    </div>
    <button class="btn btn-primary btn-lg" type="submit">Salva modifiche</button>
</form>
</div>